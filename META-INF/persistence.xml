<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>com.webflux.springwebflux.entities.Orders</class>
        <class>com.webflux.springwebflux.entities.Registeredvehicles</class>
        <class>com.webflux.springwebflux.entities.Roles</class>
        <class>com.webflux.springwebflux.entities.Users</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/CarfuelDB"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
